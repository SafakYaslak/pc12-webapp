# ============================
# ğŸ”¹ STAGE 2: Backend (Python + Flask)
# ============================
FROM python:3.10-slim AS backend

# 1) Sistem paketleri (OpenCV lib gibi gerekirse)
RUN apt-get update && apt-get install -y \
    build-essential \
    libgl1-mesa-glx \
    && rm -rf /var/lib/apt/lists/*

# 2) Ã‡alÄ±ÅŸma dizini
WORKDIR /app

# 3) Python baÄŸÄ±mlÄ±lÄ±klarÄ±nÄ± yÃ¼kle
COPY backend/requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

# 4) Backend kodunu kopyala
COPY backend ./backend

# 5) Frontend build Ã§Ä±ktÄ±sÄ±nÄ± backend/public altÄ±na kopyala
#    (builder aÅŸamasÄ±nda /build/dist varsa, getirsin)
COPY --from=frontend-builder /build/dist ./backend/public

# 6) Port aÃ§
EXPOSE 5000

# 7) UygulamayÄ± baÅŸlat
CMD ["python", "backend/main_app.py"]
